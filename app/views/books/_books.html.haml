-unless @books.empty?
  .page-header
    %h1= "Displaying Results For '#{@key.input_value}'"

  %table.table-striped
    %thead
      %tr
        %th Authors
        %th Title
        %th Thumbnail
    %tbody
      - @books.each do |b|
        %tr
          %td= b.authors
          %td= b.title
          %td= b.image_link ? image_tag(b.image_link, :size => '52x80') : "Image Not Found"
  = paginate @books
  :css
    #display_form{
        margin-top: 0%
    }
  = link_to "Back", root_path,:class => 'btn btn-primary'