-unless @books.empty?
  .page-header
    %h1= "Books"

  %table.table-striped
    %thead
      %tr
        %th Authors
        %th Title
        %th Thumbnail
    %tbody
      - @books.each do |b|
        %tr
          %td= b.authors
          %td= b.title
          %td= b.image_link ? image_tag(b.image_link(:zoom => 5)) : "Image Not Found"
  = paginate @books


